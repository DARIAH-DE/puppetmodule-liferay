<Context path="" crossContext="true">

    <Resource
       name="jdbc/LiferayPool"
       auth="Container"
       type="javax.sql.DataSource"
       driverClassName="<%= scope.lookupvar('::liferay::config::tomcatdriverClassName') %>"
       url="jdbc:<%= scope.lookupvar('::liferay::config::dbtype') %>://<%= scope.lookupvar('::liferay::dbhost') %>:<%= scope.lookupvar('::liferay::config::dbport') %>/<%= scope.lookupvar('::liferay::dbname') %>?autoReconnect=true"
       username="<%= scope.lookupvar('::liferay::dbusername') %>"
       password="<%= scope.lookupvar('::liferay::dbpassword') %>"
       maxActive="100"
       maxIdle="30"
       maxWait="10000"
    />

